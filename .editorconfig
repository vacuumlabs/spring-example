root = true

[*]

# Change these settings to your own preference
indent_style = space
indent_size = 4
max_line_length = 180

# We recommend you to keep these unchanged
end_of_line = lf
charset = utf-8
trim_trailing_whitespace = true
insert_final_newline = true

[*.json]
indent_size = 2

[*.{yml,yaml}]
indent_size = 2

[*.md]
max_line_length = 100
indent_size = 2

